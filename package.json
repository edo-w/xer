{
  "name": "@edo-w/xer",
  "version": "0.0.0",
  "description": "XER is a typescript library for creating structured errors and enchanting error handling.",
  "repository": {
    "type": "git",
    "url": "https://github.com/edo-w/xer.git"
  },
  "author": "https://github.com/juanka881",
  "license": "Apache-2.0",
  "keywords": [],
  "type": "module",
  "main": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./*": "./dist/src/*"
  },
  "files": [
    "./dist/src/*"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc && tsc-alias",
    "test": "vitest",
    "cover": "vitest run --coverage",
    "coverv": "start dist/.coverage/index.html",
    "lint": "eslint  --cache --cache-location ./dist .",
    "dev": "f [dev:*]",
    "watch:build": "tsc --watch",
    "watch:alias": "tsc-alias --watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@edo-w/devconfig": "^0.8.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "frunk": "^0.0.4",
    "lefthook": "^2.0.4",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "tsc-alias": "^1.8.16",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
